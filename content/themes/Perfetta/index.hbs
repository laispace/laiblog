{{!< default}}

{{! The main content area on the homepage }}
<main class="page-wrap" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}" data-scroll-reveal="enter bottom">
        <div>    
            <header class="post-header">
                {{content words="0"}}
                <h2 class="post-title">
                    <a href="{{url}}"><span>{{{title}}}</span></a>
                </h2>
            </header>
            <section class="post-excerpt">
                <img src="{{image}}" alt=""/>
                <p>{{excerpt words="50"}}&hellip;</p>

                <a href="{{url}}" class="post-readmore">阅读更多</a>
            </section>
        </div>

        <aside class="post-meta" data-scroll-reveal="enter left and move 30px after .3s">
            <time datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMM DD"}}
                <span>{{date format="YYYY"}}</span>
            </time> 

            <dl>
                <dt class="item-author">作者:</dt>
                <dd>{{author}}</dd>
               
                {{#if tags}}
                <dt class="item-tags">标签:</dt>
                <dd>
                    <ul>
                      {{#foreach tags}}
                        <li><a href="{{url}}">{{name}}</a>{{#if @last}} {{else}}, {{/if}}</li>
                      {{/foreach}}
                    </ul>
                </dd>
                {{/if}}
            </dl>
        </aside>
    </article>

    {{/foreach}}

    {{pagination}}
</main>